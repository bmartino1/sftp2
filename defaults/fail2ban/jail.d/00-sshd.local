[DEFAULT]
ignoreip  = 127.0.0.1/8
bantime   = 86400
findtime  = 600
maxretry  = 3

[sshd]
enabled   = true
port      = ssh
filter    = sshd
logpath   = /config/log/auth.log
backend   = auto
findtime  = 10m
maxretry  = 5
bantime   = 1h

# Use distro default action, plus whois into /config/log
action = %(action_mw)s
         logwhois[logpath=/config/log/whois.log]
