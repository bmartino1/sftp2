[DEFAULT]
ignoreip  = 127.0.0.1/8
bantime   = 86400
findtime  = 600
maxretry  = 3

[sshd]
enabled  = true
port     = ssh
filter   = sshd
logpath  = /var/log/auth.log
backend  = auto
findtime = 10m
maxretry = 5
bantime  = 1h

# Use the distroâ€™s default ban action (iptables on systems that have it).
# the docker entrypoint already drops 99-banaction.local to pick nftables if iptables is missing.
action = %(action_mw)s
         logwhois[logpath=/config/fail2ban/whois.log]
